<%= render 'layouts/flash_message' %>
<div class="container-auto mx-5">
  <div class="row p-0">
    <div class="col-lg-12 mx-auto">
      <h3 class="border-box py-4">ユーザーパスワード変更</h3>
    </div>
  </div>
  <div class="row p-0">
    <div class="col-lg-8 offset-4">
    <%= form_with(model: resource, local: true, url: registration_path(resource_name),  method: :put) do |f| %>
      <div class="row pb-2">
        <div class="col-lg-3">パスワード</div>
        <div class="col-lg-6">
          <%= f.password_field :password, autocomplete: "new-password" %>
          <div>
            <% resource.errors.full_messages_for(:password).each do |message| %>
            <div class="error_message">※ <%= message %></div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row pb-2">
        <div class="col-lg-3">確認用パスワード</div>
        <div class="col-lg-6">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
         <div>
            <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
            <div class="error_message">※ <%= message %></div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row pt-4">
    <div class="row mx-auto">
      <div class="col"><%= link_to "戻る", user_home_page_path, class: 'btn btn-primary' %></div>
      <div class="col"><%= f.submit "変更を保存", class: 'btn btn-success' %></div>
      <% end %>
    </div>
  </div>
</div>

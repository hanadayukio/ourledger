<%= render 'layouts/flash_message' %>
<div class="container">
  <div class="row">
    <div class="col-lg-12 mx-auto">
      <h3 class="border-box py-4">パスワード再設定</h3>
      <%= form_with model: resource, as: resource_name, url: password_path(resource_name), method: :put do |f| %>
      <%= f.hidden_field :reset_password_token %>
      <div class="row">
        <div class="col-lg-2 offset-1">パスワード</div>
        <div class="col-lg-6">
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control"  %>
          <div>
          <% resource.errors.full_messages.each do |message| %>
            <div class="error_message">※ <%= message %></div>
          <% end %>
          </div>
        </div>
      </div>
      <div class="row pt-4">
        <div class="col-lg-2 offset-1">パスワード(確認)</div>
        <div class="col-lg-6">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"  %>
        </div>
      </div>
      <div class="row mt-4">
        <div class="row mx-auto">
          <div class="col-lg-3"><%= f.submit "更新する", class: 'btn btn-success btn-block', style: 'width: 200px;' %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row text-right mr-3 mt-5">
  <div class="col-lg-12">
    <!--パスワードを忘れた場合-->
    <%= render "user/shared/links" %>
  </div>
</div>
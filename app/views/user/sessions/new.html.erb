<%= render 'layouts/flash_message' %>
<div class="container">
  <div class="row">
    <div class="col-lg-12 mx-auto">
      <h3 class="border-box py-5">ログイン</h3>
      <%= form_with model: @user,url: user_session_path do |f| %>
      <div class="row">
        <%= f.label :email, "メールアドレス", class: "col-lg-3 col-form-label"  %>
        <div class="col-lg-6">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
        </div>
      </div>
      <div class="row mt-4">
        <%= f.label :password, "パスワード", class: "col-lg-3 col-form-label" %>
        <div class="col-lg-6">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
      </div>
      <div class="row mt-4">
        <div class="row mx-auto">
          <div class="col"><%= f.submit "ログイン", class: 'btn btn-primary btn-block', style: 'width: 200px;' %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row text-right">
  <div class="col-lg-12 mt-5">
    <!--パスワードを忘れた場合-->
    <%= render "user/shared/links" %>
  </div>
</div>
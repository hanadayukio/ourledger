
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-12 px-5 px-sm-0 mx-auto">
      <h3 class="border-box py-5">管理者ログイン</h3>
      <div class="col-lg-12 px-5 px-sm-0 mx-auto">
      <%= form_with model: @admin,url: admin_session_path do |f| %>
        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class: "col-sm-3 col-form-label"  %>
          <div class="col-sm-6">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, "パスワード", class: "col-sm-3 col-form-label" %>
          <div class="col-sm-6">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-6 offset-sm-3">
            <%= f.submit "Log in", class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
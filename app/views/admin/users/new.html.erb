<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-12 px-5 px-sm-0 mx-auto">
      <h3 class="border-box py-5">ユーザー新規登録</h3>
      <div class="col-lg-12 px-5 px-sm-0 mx-auto">
      <%= form_with model: @user, url: admin_users_path, method: :post do |f| %>
        <div class="form-group row">
          <%= f.label :code, "社員番号", class: "col-sm-3 col-form-label" %>
          <div class="col-sm-6">
            <%= f.text_field :code %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :name, "氏名", class: "col-sm-3 col-form-label" %>
          <div class="col-sm-6">
            <%= f.text_field :name %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :name_kana, "フリガナ", class: "col-sm-3 col-form-label" %>
          <div class="col-sm-6">
            <%= f.text_field :name_kana %>
          </div>
        </div>
        </div>
       <div class="form-group row">
          <%= f.label :email, "メールアドレス", class: "col-sm-3 col-form-label"  %>
          <div class="col-sm-6">
            <%= f.text_field :email%>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, "初期パスワード", class: "col-sm-3 col-form-label" %>
          <div class="col-sm-6">
            <%= f.password_field :password %>
          </div>
        </div>
        <!--退社ステータス-->
        <%= f.hidden_field :is_deleted %>
        <!--編集可能権限-->
        <%= f.hidden_field :edit_permission %>
        <div class="form-group row">
          <div class="col-sm-6 offset-sm-3">
            <%= f.submit "新規登録", class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
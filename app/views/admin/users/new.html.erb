<%= render 'layouts/flash_message' %>
<div class="container-auto mx-5">
  <div class="row p-0">
    <div class="col-lg-12">
      <h3 class="border-box py-4">ユーザー新規登録</h3>
    </div>
  </div>
  <div class="row p-0">
    <div class="col-lg-9 offset-3">
      <%= form_with model: @user, url: admin_users_path, method: :post do |f| %>
      <%= render 'admin/users/validation_error' %>
      <div class="row pb-3">
        <div class="col-lg-2">管理番号</div>
        <div class="col-lg-6">
          <%= f.text_field :code %>
          <div>
            <% @user.errors.full_messages_for(:code).each do |message| %>
            <div class="error_message">※ <%= message %></div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row pb-3">
        <div class="col-lg-2">名前</div>
        <div class="col-lg-6">
          <%= f.text_field :name %>
          <div>
            <% @user.errors.full_messages_for(:name).each do |message| %>
            <div class="error_message">※ <%= message %></div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row pb-3">
        <div class="col-lg-2">フリガナ</div>
        <div class="col-lg-6">
          <%= f.text_field :name_kana %>
          <div>
            <% @user.errors.full_messages_for(:name_kana).each do |message| %>
            <div class="error_message">※ <%= message %></div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row pb-3">
        <div class="col-lg-2">メールアドレス</div>
        <div class="col-lg-6">
          <%= f.text_field :email %>
          <div>
            <% @user.errors.full_messages_for(:email).each do |message| %>
            <div class="error_message">※ <%= message %></div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row pb-3">
        <div class="col-lg-2">初期パスワード</div>
        <div class="col-lg-6">
          <%= f.text_field :password %>
          <div>
            <% @user.errors.full_messages_for(:password).each do |message| %>
            <div class="error_message">※ <%= message %></div>
            <% end %>
          </div>
        </div>
      </div>
      <!--退社ステータス-->
      <%= f.hidden_field :is_deleted %>
      <!--編集可能権限-->
      <%= f.hidden_field :edit_permission %>
      <div class="row pt-4">
        <div class="row offset-2">
          <div class="col"><%= link_to "一覧画面", admin_users_path, class: 'btn btn-primary' %></div>
          <div class="col"><%= f.submit "新規登録", class: 'btn btn-success' %></div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-12 px-5 px-sm-0 mx-auto">
      <h3 class="border-box py-5">台帳詳細</h3>
      <div class="col-lg-12 px-5 px-sm-0 mx-auto">
      <%= form_with model: @user, url: admin_user_path do |f| %>
        <div class="row">
          <div class="col-lg-3 pb-2">
            <div>社員番号</div>
          </div>
          <div class="col-lg-6 pb-2">
            <%= f.text_field :code %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-3 pb-2">
            <p for="id">氏名</p>
          </div>
          <div class="col-lg-6 pb-2">
            <%= f.text_field :name %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-3 pb-2">
            <p for="id">フリガナ</p>
          </div>
          <div class="col-lg-6 pb-2">
            <%= f.text_field :name_kana %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-3 pb-2">
            <p for="id">メールアドレス</p>
          </div>
          <div class="col-lg-6 pb-2">
            <%= f.text_field :email %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-3 pb-2">
            <p for="id">退社ステータス</p>
          </div>
          <div class="col-lg-1 pb-2">
            <%= f.radio_button :is_deleted, false %>　社員
          </div>
          <div class="col-lg-1 pb-2">
            <%= f.radio_button :is_deleted, true %>　退社
          </div>
        </div>
        <div class="row">
          <div class="col-lg-3 pb-2">
            <p for="id">編集権限</p>
          </div>
          <div class="col-lg-1 pb-2">
            <%= f.radio_button :edit_permission, false %>　有
          </div>
          <div class="col-lg-1 pb-2">
            <%= f.radio_button :edit_permission, true %>　無
          </div>
        </div>
      </div>
      <%= f.submit '変更を保存', class: 'btn btn-success btn-lg' %>
    </div>
    <% end %>
  </div>
</div>
<%= render 'layouts/flash_message' %>
<div class="container-auto mx-5">
  <div class="row p-0">
    <div class="col-lg-12 mx-auto">
      <h3 class="border-box py-4">台帳詳細</h3>
    </div>
  </div>
  <div class="row p-0">
    <div class="col-lg-12">
    <%= form_with model: @register, url: admin_register_path do |f| %>
      <div class="row offset-3 pb-2">
        <div class="col-lg-3">管理番号</div>
        <div class="col-lg-9">
          <%= f.text_field :reference_number, style: 'width: 300px;' %>
          <div>
            <% @register.errors.full_messages_for(:reference_number).each do |message| %>
            <div class="error_message">※ <%= message %></div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row offset-3 pb-2">
        <div class="col-lg-3">名称</div>
        <div class="col-lg-9">
          <%= f.text_field :name, style: 'width: 300px;' %>
          <div>
            <% @register.errors.full_messages_for(:name).each do |message| %>
            <div class="error_message">※ <%= message %></div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row offset-3 pb-2">
        <div class="col-lg-3">台帳説明</div>
        <div class="col-lg-9">
          <%= f.text_area :detail, style: 'width: 300px; height: 80px;' %>
          <div>
            <% @register.errors.full_messages_for(:detail).each do |message| %>
            <div class="error_message">※ <%= message %></div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row offset-3 pb-2">
        <div class="col-lg-3">登録/削除</div>
        <div class="col-lg-2">
          <%= f.radio_button :is_deleted, false %>　登録中
        </div>
        <div class="col-lg-3">
          <%= f.radio_button :is_deleted, true %>　削除中
        </div>
      </div>
      <div class="row pt-4">
        <div class="row mx-auto">
          <div class="col mr-5 pl-0"><%= link_to "戻る", admin_register_path, class: 'btn btn-primary' %></div>
          <div class="col"><%= f.submit '変更を保存', class: 'btn btn-success' %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>